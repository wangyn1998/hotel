            <form style="margin-top: 3%;" method="post" action="searchRoom">
                <input class="search" type="text" placeholder="请输入" name="roomType"/>
                <input class="search-button" type="submit" value="搜索"/>
            </form>
            <div class="roomMain">
                <ul id="all">
                    <!-- <li>
                        <div class="roomhead">
                            <div class="roomtitle"><h3>房型</h3></div>
                            <div class="roomtitle"><h3>房间号</h3></div>
                            <div class="roomtitle"><h3>价格</h3></div>
                            <div class="roomtitle"><h3>余量</h3></div>
                            <div class="roomtitle"><h3>基本信息</h3></div>
                            <div class="roomtitle"><h3>操作</h3></div>
                        </div>
                    </li> -->
                    
                    <% for(var i = 0 ; i <  7; i++) {%>
                        <li>
                            <div class="roombody">
                                <p class="roomcontent">标准间</p>
                                <p class="roomcontent" style="font-size: 0.8em;line-height: 4em">
                                    101-105 201-205 301-305
                                </p>
                                <p class="roomcontent">-</p>
                                <p class="roomcontent">-</p>
                                <p class="roomcontent">-</p>
                                <p class="roomcontent">
                                    <a class="edit" id="edit" href='/editroom?edit=1'>编辑</a>
                                    <a class="del" id="del" style="margin-left: 5%">删除</a>
                                </p>
                            </div>
                        </li>
                    <% } %>  
                   
                </ul>
            </div>
            <div class="pageBox">
                <div id="page"></div>
            </div>
        </div>
    </div>
    <div id="pop-container">
        <div id="cover-tier" class="popPosition"></div>
        <div id="pop-tier" class="popPosition">
            <i id="close-pop" style="color:#e53834">&#10006;</i>
            <div class="iconfont icon-dui" style="color:#e53834;margin-top:20px">
                <span>确定要删除吗？</span>
            </div>
            <button id="sure">确定</button>
        </div>
    </div>
  </body>
  <script src="https://apps.bdimg.com/libs/jquery/2.1.4/jquery.min.js"></script>
  <script type="text/javascript"></script>
  <script>
    var height = window.innerHeight;
    console.log(height-70); 
    $('.all').css('height',height);
    $('.slide').css('height',height-70);
    $('.content').css('height',height-70);

    //分页
    function getzz() {
        var a = $("ul#all li");
        var zz =new Array(a.length);
        for(var i=0;i <a.length;i++){
            zz[i]=a[i].innerHTML;
        }
        return zz;
    }
    function change(e){
        pageno=e;
        if(e<1){
            e=1;
            pageno=1;
        }
        if(e>pageall){
            e=pageall;
            pageno=pageall;
        }
        $("#all").html("");
        var html=' <li><div class="roomhead"><div class="roomtitle"><h3>房型</h3></div><div class="roomtitle"><h3>房间号</h3></div><div class="roomtitle"><h3>价格</h3></div><div class="roomtitle"><h3>余量</h3></div><div class="roomtitle"><h3>基本信息</h3></div><div class="roomtitle"><h3>操作</h3></div></div></li> ';
        for(var i=0;i<pagesize;i++){
            html += '<li>' + zz[(e-1)*pagesize+i] +'</li>';
            if(zz[(e-1)*pagesize+i+1]==null) break;
        }
        $("ul#all").html(html);
        var ye="";
        for(var j=1;j<=pageall;j++){
            if(e==j){
                ye=ye+"<span><a href='#' onClick='change("+j+")' style='color:#e53834'>"+j+"</a></span> ";
            }else{
                ye=ye+"<a href='#' onClick='change("+j+")'>"+j+"</a> ";
            }
        }
        var pageContent="";
        pageContent +='第<span id=\"a2\">'+pageno+'</span>/';
        pageContent +='<span id="a1">'+pageall+'</span>页';
        pageContent +="<span id='a3' style='margin-left:10px'>"+ye+'</span>';
        pageContent +='<a href="#" style="margin-left:10px;" onClick="change(--pageno)">上一页</a>';
        pageContent +='<a href="#" style="margin-left:5px;" onClick="change(++pageno)">下一页</a>';
        $("#page").html(pageContent);
    }
    var zz = getzz();
    var pageno = 1 ; 
    var pagesize = 5; 
    if(zz.length%pagesize == 0){
        var pageall = zz.length/pagesize;
    }else{
        var pageall = parseInt(zz.length/pagesize) + 1;
    } 
    change(1);

    // 点击按钮出现弹出层
    $('.del').click(function(){
        $('#pop-container').css('display','block');
    })
    // 点击右上角X弹出层隐藏
    $('#close-pop').click(function(){
        $('#pop-container').css('display','none');
    })


    // 编辑
    // var editroom = "";
    // $(".edit").click(function(){
    //     editroom = $(this).attr("id");
    //     console.log(editroom);
    //     $.ajax({
    //         url: '/editRoom',
    //         method: 'POST',
    //         data:{
    //             editroom : editroom
    //         },
    //         success: function(data){
    //             if(data == 'success'){
    //                 window.location.href = '/editroom';
    //             } 
    //         }
    //     })
    // })

    // 删除
    var roomType = "";
    $(".del").click(function(){
        roomType = $(this).attr("id");
        console.log(roomType);
    })

    $('#sure').click(function(){
        $.ajax({
            url: '/delroom',
            method: 'POST',
            data:{
                roomType : roomType
            },
            success: function(data){
                if(data == 'success'){
                    alert('删除成功');
                }else{
                    alert('删除失败')
                }
                window.location.href = '/room';
            }
        })
    })
  </script>
</html>
